@{
    ViewBag.Title = "PDF Utils";
}

    <div class="about-area section-padding bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-xs-12 info">
                    <div class="about-wrapper wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                        <div>
                            <div class="site-heading">
                                <p class="mb-3">PDF Utilities</p>
                                <h2 class="section-title">Merge PDF</h2>
                            </div>
                            <div class="content">
                                <p class="lead">
                                    If you have multiple files you need to stitch together, stitch file #1 and #2 to get a merged copy.<br />
                                    Then you can stitch the merged copy with #3 and get a second merge. Repeat as often as required.
                                </p>

                                <form action="@Url.Action("Stitch", "PdfUtils")" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>First File</label>
                                        <input type="file" name="firstFile" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Second File</label>
                                        <input type="file" name="secondFile" required />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Merge</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-xs-12 wow fadeInRight animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                    <div class="about-wrapper wow fadeInLeft animated" data-wow-delay="0.3s" style="visibility: visible;-webkit-animation-delay: 0.3s; -moz-animation-delay: 0.3s; animation-delay: 0.3s;">
                        <div>
                            <div class="site-heading">
                                <p class="mb-3">PDF Utilities</p>
                                <h2 class="section-title">Password Protect PDF Files</h2>
                            </div>
                            <div class="content">
                                <p class="lead">
                                    Upload multiple files that all need to be password protected. The download will contain those same PDF files, just password protected for reading.
                                </p>

                                <form action="@Url.Action("Protect", "PdfUtils")" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Select Files (up to 5Mb at a time)</label>
                                        <input type="file" multiple name="files" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="text" name="password" maxlength="32" required />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Protect</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

