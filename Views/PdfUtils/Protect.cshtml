@{
    ViewBag.Title = "Password Protect PDFs";
}

<div class="site-heading">
    @{Html.RenderPartial("_Nav"); }
</div>

<div class="content">
    <p class="lead">
        Upload multiple files that all need to be password protected. The download will contain those same PDF files, just password protected for reading.
    </p>

    <form action="@Url.Action("MakeProtectionBundle", "PdfUtils")" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Select Files (up to 30Mb at a time)</label>
            <input type="file" multiple name="files" required />
        </div>
        <div class="form-group">
            <label>Password (optional)</label>
            <input type="text" name="password" maxlength="32" />
        </div>
        <div class="form-group">
            <label>Readonly Password (optional)</label>
            <input type="text" name="passwordedit" maxlength="32" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Protect</button>
        </div>
    </form>
</div>
                        
